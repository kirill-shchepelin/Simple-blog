<% title "Вход" %>

<% form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "Никнейм или Email" %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password, 'Пароль' %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "Войти" %></p>
<% end %>
