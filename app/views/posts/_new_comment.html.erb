<h3>Добавление комментария:</h3>
<% form_remote_for [@post, Comment.new] do |f|%>
  <% if !logged_in? %>
    <%= f.label :guest_name, 'Ваше имя'%>: <%= f.text_field :guest_name%>    
  <% end %>
  <p>
    <%= f.label :body, 'Комментарий:'%><br/>
    <%= f.text_area :body %>  
  </p>
  <% if !logged_in? %>
    <%= show_simple_captcha(:object=>"comment") %>  
  <% end %>
  <p>
    <%= f.submit "Добавить" %>
  </p>
<% end %>
